<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <com.parse.ParseImageView
            android:id="@+id/iv_down_Pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:gravity="fill"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_down_Pic"
            android:layout_toLeftOf="@+id/btn_markAsTaken"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_down_title"
                android:text="Will Show Title"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/iv_down_Pic"

                android:layout_toLeftOf="@+id/btn_markAsTaken"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_down_desc"
                android:text="Descripton Here"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_below="@+id/tv_down_title"
                android:layout_toRightOf="@+id/iv_down_Pic"
                android:ellipsize="end"
                android:lines="1"
                android:layout_toLeftOf="@+id/btn_markAsTaken" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/me_button_mark_taken"
            android:text="Mark as Taken"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:id="@+id/btn_markAsTaken"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp" />
        </RelativeLayout>

</RelativeLayout>
