<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/relativeLayout_conv_cell">

        <com.parse.ParseImageView
            android:id="@+id/iv_down_Pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_conversationName"
            android:text="Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_down_Pic"
            android:layout_marginLeft="5dp"/>
      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_forWhichPost"
            android:text="for  "
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/tv_conversationName"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_message"
             android:text="Message"
             android:textSize="12sp"

             android:textColor="#000000"
             android:layout_toRightOf="@+id/iv_down_Pic"
             android:layout_below="@+id/tv_conversationName"
             android:layout_marginLeft="5dp"
             />


    </RelativeLayout>

</RelativeLayout>
