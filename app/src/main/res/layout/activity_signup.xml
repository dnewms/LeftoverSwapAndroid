<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28bf13"

    >
    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2cc71b">


        <Button
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:visibility="invisible" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/btn_createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@android:color/transparent"
            />
        <Button

            android:layout_alignParentRight="true"
            android:id="@+id/btn_done"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="Done"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>


     <RelativeLayout
            android:id="@+id/lay_center"
            android:layout_below="@+id/lay_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
         android:layout_centerHorizontal="true"


            >

             <TextView
                 android:id="@+id/tv_userName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Username"
                 android:textSize="22sp"
                 android:textStyle="bold"
                 android:textColor="#ffffff"
                 android:layout_marginTop="3dp"
                 android:layout_gravity="center_vertical"/>

             <EditText

                 android:id="@+id/editText_userName"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:inputType="text"
                 android:background="@drawable/newaccount_textfield_bg"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@+id/tv_userName"
                 android:paddingLeft="5dp" />




              <TextView
                 android:id="@+id/tv_password"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Password"
                 android:textSize="22sp"
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:textColor="#ffffff"
                  android:layout_marginTop="32dp"
                  android:layout_below="@id/tv_userName"
                  android:layout_alignRight="@+id/tv_userName"
                  android:layout_alignEnd="@+id/tv_userName" />

              <EditText

                 android:id="@+id/editText_password"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                  android:layout_below="@+id/editText_userName"
                 android:inputType="textPassword"
                 android:background="@drawable/newaccount_textfield_bg"
                  android:layout_gravity="center_vertical"
                  android:layout_marginTop="20dp"

                  android:layout_alignLeft="@+id/editText_userName"
                  android:layout_alignStart="@+id/editText_userName"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:paddingLeft="5dp" />




            <TextView

                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tv_password"
                android:layout_marginTop="32dp"
                android:layout_alignRight="@+id/tv_userName"
                android:layout_alignEnd="@+id/tv_userName" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_password"
                android:inputType="textEmailAddress"
                android:background="@drawable/newaccount_textfield_bg"
                android:layout_marginTop="20dp"

                android:layout_alignLeft="@+id/editText_password"
                android:layout_alignStart="@+id/editText_password"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="5dp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="We know, we know, signing up is a pain. But \nit's a one-time thing"
             android:layout_below="@+id/tv_email"
             android:layout_marginTop="20dp"
             android:textColor="#ffffff"/>
        </RelativeLayout>




</RelativeLayout>
