<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

 >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/lay_footer"
        android:id="@+id/fragmentContainer">

      </FrameLayout>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/iv"/>


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:id="@+id/lay_footer"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:weightSum="4"
       android:background="#f7f7f7"
       android:gravity="center_vertical"

       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingTop="3dp"
           android:id="@+id/linearLayout_tab_map"
           android:layout_weight="1"
           android:clickable="true">

           <ImageView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ib_map"
               android:background="@drawable/tabbarmap"
               android:layout_gravity="center_horizontal"               />
           <TextView
               android:id="@+id/tv_map"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Map"
               android:layout_gravity="center_horizontal"/>
           </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingTop="3dp"
           android:id="@+id/linearLayout_tab_post"
           android:layout_weight="1"
           android:clickable="true">

           <ImageView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ib_post"
               android:background="@drawable/tabbarpost"
               android:layout_gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/tv_post"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Post"
               android:layout_gravity="center_horizontal"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:paddingTop="3dp"
           android:id="@+id/linearLayout_tab_conv"
           android:measureWithLargestChild="false"
           android:clickable="true">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ib_conversation"
               android:background="@drawable/tabbarmessage"
               android:layout_gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/tv_conversation"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Conversations"
               android:layout_gravity="center_horizontal"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:paddingTop="3dp"
           android:id="@+id/linearLayout_tab_me"
           android:clickable="true">

           <ImageView
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ib_me"
               android:background="@drawable/tabbarme"
               android:layout_gravity="center_horizontal"
               />

           <TextView
               android:id="@+id/tv_me"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Me"
               android:layout_gravity="center_horizontal"/>
       </LinearLayout>

       </LinearLayout>

</RelativeLayout>
